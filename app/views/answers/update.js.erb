$('#flash').replaceWith("<%= j render partial: 'shared/flash_message' %>");
  $('#errors_block').remove();

<% if @answer.errors.present? %>
  $("form#edit_answer_<%= @answer.id %>").before("<%= j render partial: 'shared/error_messages', locals: { obj: @answer } %>");
<% else %>
  $('#answer_' + <%= @answer.id %>).replaceWith("<%= j render partial: 'answer', locals: { answer: @answer } %>");
<% end %>

$('.edit_answer_link').click(function(e){
  e.preventDefault();
  $(this).hide();
  answer_id = $(this).data('answerId');
  $('#edit_answer_' + answer_id).show();
});
